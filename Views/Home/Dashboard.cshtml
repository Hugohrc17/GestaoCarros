@{
    ViewData["Title"] = "Dashboard";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark shadow mb-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold" href="/">
            <i class="bi bi-speedometer2 me-2"></i>
            Gestão de Carros
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link text-white" href="/">
                        <i class="bi bi-house-door-fill me-1"></i> Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Veiculo">
                        <i class="bi bi-car-front-fill me-1"></i> Veículos
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Cliente">
                        <i class="bi bi-people-fill me-1"></i> Clientes
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Usuario">
                        <i class="bi bi-person-fill-gear me-1"></i> Usuários
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Relatorio">
                        <i class="bi bi-bar-chart-fill me-1"></i> Relatórios
                    </a>
                </li>
                <li class="nav-item">
                    <span class="nav-link text-white">
                        <i class="bi bi-person-circle me-1"></i> Bem-vindo!
                    </span>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Cards de Estatísticas -->
<div class="container my-4">
    <div class="row g-3">
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 stat-card">
                <div class="card-body d-flex align-items-center">
                    <div class="icon-box me-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <i class="bi bi-car-front-fill text-white"></i>
                    </div>
                    <div>
                        <h3 class="mb-0 fw-bold">156</h3>
                        <p class="mb-0 text-muted">Veículos</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 stat-card">
                <div class="card-body d-flex align-items-center">
                    <div class="icon-box me-3" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                        <i class="bi bi-people-fill text-white"></i>
                    </div>
                    <div>
                        <h3 class="mb-0 fw-bold">423</h3>
                        <p class="mb-0 text-muted">Clientes</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 stat-card">
                <div class="card-body d-flex align-items-center">
                    <div class="icon-box me-3" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                        <i class="bi bi-person-fill-gear text-white"></i>
                    </div>
                    <div>
                        <h3 class="mb-0 fw-bold">12</h3>
                        <p class="mb-0 text-muted">Usuários</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 stat-card">
                <div class="card-body d-flex align-items-center">
                    <div class="icon-box me-3" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);">
                        <i class="bi bi-bar-chart-fill text-white"></i>
                    </div>
                    <div>
                        <h3 class="mb-0 fw-bold">89</h3>
                        <p class="mb-0 text-muted">Relatórios</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Card Principal -->
    <div class="row mt-5">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-speedometer display-1" style="color: #667eea;"></i>
                    </div>
                    <h1 class="display-5 fw-bold mb-3" style="color: #667eea;">
                        Sistema de Gestão
                    </h1>
                    <p class="lead text-muted mb-4">
                        Gerencie veículos, clientes e usuários de forma eficiente e organizada
                    </p>
                    <div class="d-flex justify-content-center gap-3 flex-wrap">
                        <a href="/Veiculo" class="btn btn-primary btn-lg px-4">
                            <i class="bi bi-car-front-fill me-2"></i> Ver Veículos
                        </a>
                        <a href="/Cliente" class="btn btn-outline-primary btn-lg px-4">
                            <i class="bi bi-people-fill me-2"></i> Ver Clientes
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cards de Ações Rápidas -->
    <div class="row g-4 mt-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 action-card">
                <div class="card-body text-center p-4">
                    <i class="bi bi-plus-circle-fill display-4 mb-3" style="color: #667eea;"></i>
                    <h5 class="fw-bold mb-2">Adicionar Veículo</h5>
                    <p class="text-muted small mb-3">Cadastre novos veículos no sistema</p>
                    <a href="/Veiculo/Create" class="btn btn-outline-primary">Adicionar</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 action-card">
                <div class="card-body text-center p-4">
                    <i class="bi bi-person-plus-fill display-4 mb-3" style="color: #f5576c;"></i>
                    <h5 class="fw-bold mb-2">Novo Cliente</h5>
                    <p class="text-muted small mb-3">Registre novos clientes rapidamente</p>
                    <a href="/Cliente/Create" class="btn btn-outline-primary">Cadastrar</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 action-card">
                <div class="card-body text-center p-4">
                    <i class="bi bi-file-earmark-bar-graph-fill display-4 mb-3" style="color: #00f2fe;"></i>
                    <h5 class="fw-bold mb-2">Gerar Relatório</h5>
                    <p class="text-muted small mb-3">Visualize estatísticas e dados</p>
                    <a href="/Relatorio" class="btn btn-outline-primary">Ver Mais</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .navbar-brand {
        font-size: 1.5rem;
    }

    .nav-link {
        padding: 0.5rem 1rem !important;
        transition: all 0.3s ease;
    }

    .nav-link:hover {
        background: rgba(255,255,255,0.2);
        border-radius: 0.5rem;
    }

    .stat-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.15) !important;
    }

    .icon-box {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
    }

    .btn-outline-primary {
        color: #667eea;
        border-color: #667eea;
        transition: all 0.3s ease;
    }

    .btn-outline-primary:hover {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-color: transparent;
        color: white;
    }

    .action-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .action-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.15) !important;
    }
</style>